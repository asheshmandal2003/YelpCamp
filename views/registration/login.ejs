<% layout('layouts/boilerplate') %>

<div class="row mb-5">
  <div class="col-md-6 offset-md-3 card shadow p-5">
    <h1 class="offset-4"><b>Sign In</b></h1>
    <hr />
    <form action="/login" method="post" class="validated-form p-3" novalidate>
      <label for="username" class="form-label mb-3">Enter Your Username</label>
      <div class="input-group mb-3">
        <span class="input-group-text">@</span>
        <div class="form-floating">
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            placeholder="Username"
            required
          />
          <label for="username">Username</label>
          <div class="invalid-feedback">Username Required!</div>
        </div>
      </div>
      <label for="password" class="form-label mb-3">Enter Your Password</label>
      <div class="form-floating">
        <input
          type="password"
          class="form-control mb-3"
          id="password"
          name="password"
          placeholder="Password"
          required
        />
        <label for="password">Password</label>
        <div class="invalid-feedback">Password Required!</div>
      </div>
      <button class="btn btn-primary my-3 w-100">Sign in</button>
    </form>
    <p class="ms-3 mt-5">
      Don't have an account?
      <a
        class="link-offset-2 link-underline link-underline-opacity-0"
        href="/register"
        >Sign up</a
      >
    </p>
  </div>
</div>
<script src="/js/validatedForm.js"></script>
