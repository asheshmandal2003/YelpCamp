<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3 border border-muted rounded p-5">
    <form
      method="POST"
      action="/campgrounds/<%= campground._id %>?_method=PUT"
      class="validated-form"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="title"
          id="title"
          value="<%= campground.title %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Title Required!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="location"
          id="location"
          value="<%= campground.location %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Location required!!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image</label>
        <input
          type="file"
          class="form-control"
          id="image"
          name="image"
          multiple
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1">$</span>
          <input
            type="number"
            step="0.01"
            class="form-control"
            placeholder="0.00"
            aria-label="Price"
            name="price"
            id="price"
            value="<%= campground.price %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Price required!!</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          name="description"
          id="description"
        >
<%= campground.description %>
</textarea
        >
      </div>
      <div class="mb-3 d-flex">
        <% campground.images.forEach((img, idx)=>{%>
        <label for="image<%= idx %>">
          <img
            src="<%= img.thumbnail %>"
            alt="image"
            class="img-thumbnail"
            style="cursor: pointer"
          />
        </label>
        <div class="form-check mb-3 mt-3 ms-2">
          <input
            class="form-check-input"
            type="checkbox"
            name="deleteImgs[]"
            id="image<%= idx %>"
            value="<%= img.filename %>"
            style="cursor: pointer"
          />
        </div>
        <% }) %>
      </div>
      <div class="mb-3">
        <button class="btn btn-success w-100" type="post">Update</button>
      </div>
    </form>
    <a class="btn btn-danger w-100" href="/campgrounds/<%= campground._id %>"
      >Cancel</a
    >
  </div>
</div>

<script src="/js/validatedForm.js"></script>
